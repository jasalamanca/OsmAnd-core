LOCAL_PATH := $(call my-dir)

ifeq ($(OSMAND_BUILDING_NEON_LIBRARY),true)
    BOOST_ARCH_SUFFIX := .$(TARGET_ARCH_ABI)-neon
    MODULE_SUFFIX := _neon
else
    BOOST_ARCH_SUFFIX := .$(TARGET_ARCH_ABI)
    MODULE_SUFFIX :=
endif
BOOST_FLAVOR := upstream.patched$(BOOST_ARCH_SUFFIX)
BOOST_VERSION_SUFFIX := -gcc-mt-1_55

include $(CLEAR_VARS)
LOCAL_ARM_NEON := $(OSMAND_BUILDING_NEON_LIBRARY)
LOCAL_LIB_NAME := boost_system
LOCAL_MODULE := $(LOCAL_LIB_NAME)$(MODULE_SUFFIX)
LOCAL_SRC_FILES := $(BOOST_FLAVOR).static/stage/lib/lib$(LOCAL_LIB_NAME)$(BOOST_VERSION_SUFFIX).a
LOCAL_EXPORT_C_INCLUDES := \
    $(LOCAL_PATH)/$(BOOST_FLAVOR).static
include $(PREBUILT_STATIC_LIBRARY)

