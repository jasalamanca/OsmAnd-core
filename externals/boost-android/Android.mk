LOCAL_SRC_FILES := $(BOOST).static/stage/lib/lib$(LOCAL_LIB_NAME)$(VERSION).a
LOCAL_EXPORT_C_INCLUDES := \
    $(LOCAL_PATH)/$(BOOST).static
include $(PREBUILT_STATIC_LIBRARY)

